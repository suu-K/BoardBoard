<body>
    <br>
    <br>
    <div class="container px-lg-5">
                <div>
                    <table class="table table-striped table-bordered"> 
                        <thead> 
                            <tr> 
                                <th width="30%">호스트</th> 
                                <td width="70%"><%= post.user.name %></td> 
                            </tr> 
                            <tr> 
                                <th>모임명</th> 
                                <td><%= post.title %></td> 
                            </tr>
                            <tr> 
                                <th>모임 장소</th> 
                                <td><%= post.place %></td> 
                            </tr>
                            <tr> 
                                <th style="padding-top: 15px">모임날짜</th> 
                                <td><%= post.date %></td> 
                            </tr> 
                        </thead> 
                        <tbody>
                            <tr> 
                                <td colspan="2" class="container px-lg-5"> <%= post.content %> </td> 
                            </tr> 
                        </tbody> 
                    </table>
                    
                    <div style="padding-left: 20%; padding-right: 20%;">
                        <mem style="font-size: larger; position: relative; left:95%;">2/8</mem>
                        <table class="table table-striped table-bordered text-center">
                            <thead>
                                <%if(session) { //로그인시%>
                                <%//for(참가자 수/2만큼 반복)%>
                                <tr height="55">
                                    <td width="50%"><%= post.user.name%><e style="font-size: larger;">★</e></td>
                                    <td width="50%">다른 참여자</td>
                                </tr>
                                <tr height="55">
                                    <td width="50%">다른 참여자</td>
                                    <td width="50%"><input type="button" class="form-control" value="참여하기"></td>
                                </tr>
                                <%}%>
                            </thead>
                        </table>
                    </div>
                    <br>
                    <%if(session.id==post.writerid) {%>
                    <div style="padding-bottom: 2%;">
                        <input type="button" class="btn bg-light" style="position: relative; left: 87%;" value="수정" onclick="document.location.href='/party'">
                        <input type="button" class="btn bg-light" style="position: relative; left: 87%;" value="삭제" onclick="document.location.href='/party'"> 
                    </div>
                    <%}%>
                    <table class="table table-striped table-bordered"> 
                        <thead>
                            <form action="/party/reply" method="post">
                                <th width="15%" style=><%= session.name %></th> 
                                <td width="85%">
                                    <input type="text" name="reply" class="form-control">
                                </td>
                                <td style="border-left:hidden">
                                    <input type="submit" class="form-control" value="등록"> 
                                </td>
                            </form>
                        </thead>
                        <thead>
                            <tr>
                                <th><%= post.user.name %></th>
                                <td colspan="2"><%= post.user.name %></td>
                            </tr>
                            <% if(false) {%>
                                <% for(let post of posts){ %>
                                    <tr>
                                        <th><%= post.user.name %></th>
                                        <td><%= post.user.name %></td>
                                    </tr>
                                <%}%>
                            <%}%>
                        </thead> 
                    </table>
                </div> 
                <div>
                    <input type="button" class="btn bg-light" style="position: relative; left: 90%;" value="뒤로 가기" onclick="document.location.href='/party'"> 
                </div> 
    </div>
</body>