<body>
    <br>
    <br>
    <div class="container px-lg-5">
                <div>
                    <table class="table table-striped table-bordered"> 
                        <thead> 
                            <tr> 
                                <th width="30%">호스트</th> 
                                <td width="70%"><%= post.user.name %></td> 
                            </tr> 
                            <tr> 
                                <th>모임명</th> 
                                <td><%= post.title %></td> 
                            </tr>
                            <tr> 
                                <th>모임 장소</th> 
                                <td><%= post.place %></td> 
                            </tr>
                            <tr> 
                                <th style="padding-top: 15px">모임날짜</th> 
                                <td><%= post.date %></td> 
                            </tr> 
                        </thead> 
                        <tbody> 
                            <tr> 
                                <td colspan="2"> <%= post.content %> </td> 
                            </tr> 
                        </tbody> 
                    </table>
                    <br>
                    <table class="table table-striped table-bordered"> 
                        <thead>
                            <form action="/party/reply/<%= post.id %>" method="post">
                                <th width="15%" style=><%= session.name %></th> 
                                <td width="85%">
                                    <input type="text" name="content" class="form-control">
                                </td>
                                <td style="border-left:hidden">
                                    <input type="submit" class="btn bg-light" value="등록"> 
                                </td>
                            </form>
                        </thead>
                        <thead>
                            <% if(post.replies) {%>
                                <% for(let reply of post.replies){ %>
                                    <tr>
                                        <th><%= reply.user.name %></th>
                                        <td><%= reply.content %></td>
                                    </tr>
                                <%}%>
                            <%}%>
                        </thead> 
                    </table>
                </div> 
                <div>
                    <input type="button" class="btn bg-light" style="position: relative; left: 92%;" value="뒤로 가기" onclick="document.location.href='/party'"> 
                </div> 
    </div>
</body>